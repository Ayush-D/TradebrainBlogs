<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c2e7c5"
    android:layout_margin="3dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="2dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageFlag"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_above="@+id/textView"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:layout_toStartOf="@+id/tvTitle"
                app:civ_border_color="#000"
                app:civ_border_width="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnMore"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="33dp"
                android:layout_marginEnd="13dp"
                android:gravity="center"
                android:text="Canada"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/tvDesc"
                android:text="Date of Release : "
                android:textColor="#000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/btnMore"
                android:text="Date of Publishment"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000" />

            <Button
                android:id="@+id/btnMore"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@android:color/black"
                android:gravity="center"
                android:text="Click Here"
                android:textColor="#f2f2f2"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>